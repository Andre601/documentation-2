{
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./lib",
		"target": "ES2019",
		"module": "commonjs",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"strict": false,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["node", "cheerio", "markdown-it"]
	}
}
